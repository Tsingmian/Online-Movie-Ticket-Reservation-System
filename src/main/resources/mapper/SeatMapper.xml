<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.movie_ticket_reservation.mapper.SeatMapper">

    <select id="selectById"
            resultType="com.example.movie_ticket_reservation.entity.Seat">
        SELECT id, screening_id, row_num, col_num, status
        FROM seats
        WHERE id = #{id}
    </select>

    <update id="lockSeat">
        UPDATE seats
        SET status = 1
        WHERE id = #{id}
        AND status = 0
    </update>


</mapper>
